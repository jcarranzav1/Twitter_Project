{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "plugins": ["jest"],

  "parserOptions": {
    "ecmaVersion": 13
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "no-console": "off",
    "indent": ["error", 2],

    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "next|res"
      }
    ],
    "max-len": ["error", { "code": 130 }],
    "implicit-arrow-linebreak": "off"
  }
}
